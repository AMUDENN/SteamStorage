<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector="Grid">
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition
                    Easing="SineEaseOut"
                    Property="Width"
                    Duration="0:0:0.2" />
                <DoubleTransition
                    Easing="SineEaseOut"
                    Property="Height"
                    Duration="0:0:0.2" />
                <ThicknessTransition
                    Easing="SineEaseOut"
                    Property="Margin"
                    Duration="0:0:0.2" />
            </Transitions>
        </Setter>
    </Style>

</Styles>
