	<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style Selector="Grid">
		<Setter Property="Transitions">
			<Transitions>
				<DoubleTransition Property="Width" Duration="0:0:0.2" Easing="SineEaseOut"/>
				<DoubleTransition Property="Height" Duration="0:0:0.2" Easing="SineEaseOut"/>
				<ThicknessTransition Property="Margin" Duration="0:0:0.2" Easing="SineEaseOut"/>
			</Transitions>
		</Setter>
	</Style>
	
</Styles>
