<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:SteamStorage.Resources.Controls"
        x:DataType="controls:VectorImage">
    
    <Style Selector="controls|VectorImage">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Transitions">
            <Transitions>
                <ThicknessTransition Property="Margin" Duration="0:0:0.2" Easing="SineEaseOut"/>
                <DoubleTransition Property="Opacity" Duration="0:0:0.2" Easing="SineEaseOut"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="controls|VectorImage.ForegroundVectorImage">
        <Setter Property="Brush" Value="{DynamicResource ForegroundBrush}"/>
    </Style>    
    
    <Style Selector="controls|VectorImage.PositiveVectorImage">
        <Setter Property="Brush" Value="{DynamicResource PositiveBrush}"/>
    </Style>    
    
    <Style Selector="controls|VectorImage.NegativeVectorImage">
        <Setter Property="Brush" Value="{DynamicResource NegativeBrush}"/>
    </Style>    
        
</Styles>
