<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style Selector="ContextMenu">
        <Setter Property="MaxWidth" Value="400" />
        <Setter Property="MinHeight" Value="30" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="WindowManagerAddShadowHint" Value="False" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Classes="BackgroundAdditionalBorder SmallRoundedBorder LittleBorder ForegroundBorderBrush"
                        MaxWidth="{TemplateBinding MaxWidth}"
                        MinHeight="{TemplateBinding MinHeight}">
                    <ScrollViewer Margin="0, 10">
                        <ItemsPresenter x:Name="PART_ItemsPresenter"
                                        ItemsPanel="{TemplateBinding ItemsPanel}"
                                        KeyboardNavigation.TabNavigation="Continue"
                                        Grid.IsSharedSizeScope="True" />
                    </ScrollViewer>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="ContextMenu MenuItem">
        
    </Style>
    
    <Style Selector="ContextMenu Separator">
        
    </Style>
        
</Styles>
