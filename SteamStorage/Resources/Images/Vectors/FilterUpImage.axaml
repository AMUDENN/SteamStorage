	<Style Selector="Image.FilterUpImage">
		<Setter Property="Source">
			<Setter.Value>
				<DrawingImage>
					<DrawingImage.Drawing>
						<DrawingGroup ClipGeometry="M0,0 V25 H30 V0 H0 Z">
							<GeometryDrawing Brush="{DynamicResource ForegroundBrush}" Geometry="F1 M30,25z M0,0z M30,25L0,25 15,0 30,25z" />
						</DrawingGroup>
					</DrawingImage.Drawing>
				</DrawingImage>
			</Setter.Value>
		</Setter>
	</Style>
	
</Styles>
