<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SteamStorage.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SteamStorage.Views.HomeView"
             x:DataType="vm:HomeViewModel">

	<TabControl>
		
		<TabItem Header="Статистика">
			
			<ContentControl Content="{Binding StatisticsViewModel, Mode=OneWay}"/>	
			
		</TabItem>
		
		<TabItem Header="Список предметов">
			
			<ContentControl Content="{Binding ListItemsViewModel, Mode=OneWay}"/>	
			
		</TabItem>
		
	</TabControl>

</UserControl>
