<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="SteamStorage.Views.ArchivesView"
    x:DataType="vm:ArchivesViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:SteamStorage.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="Auto, *">

        <ListBox
            Classes="SecondaryNavigationListBox"
            Grid.Row="0"
            ItemsSource="{Binding SecondaryNavigationOptions, Mode=OneWay}"
            SelectedItem="{Binding SelectedSecondaryNavigationModel}" />

        <TransitioningContentControl Content="{Binding CurrentViewModel, Mode=OneWay}" Grid.Row="1" />

    </Grid>

</UserControl>
