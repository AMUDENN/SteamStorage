<Window
    Classes="MainWindow"
    Height="1024"
    Icon="\Resources\Images\Bitmaps\BlackIcon24.ico"
    Title="SteamStorage"
    Width="1440"
    d:DesignHeight="1024"
    d:DesignWidth="1440"
    mc:Ignorable="d"
    x:Class="SteamStorage.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:SteamStorage.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <TransitioningContentControl Classes="CrossFadeTransitioningContentControl" Content="{Binding MainViewModel, Mode=OneWay}" />

</Window>
