<Application
    x:Class="SteamStorage.App"
    x:CompileBindings="True"
    xmlns="https://github.com/avaloniaui"
    xmlns:converters="using:SteamStorage.Resources.Converters"
    xmlns:themeVariants="using:SteamStorage.Utilities.ThemeVariants"
    xmlns:utilities="using:SteamStorage.Utilities"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.DataTemplates>
        <utilities:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>

        <!--  BaseTheme  -->
        <FluentTheme />

        <!--  ColorPicker base style  -->
        <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Fluent/Fluent.xaml" />

        <!--  Styles  -->
        <StyleInclude Source="/Resources/Styles/AutoCompleteBoxStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/BorderStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/ButtonStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/CheckBoxStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/ColorPickerStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/ComboBoxStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/ContentPresenterStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/ContextMenuStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/DatePickerStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/GridStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/ImageStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/ListBoxStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/NumericUpDownStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/RadioButtonStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/RectangleStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/ScrollViewerStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/StackPanelStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/TextBlockStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/TextBoxStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/ToggleButtonStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/ToolTipStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/TransitioningContentControlStyles.axaml" />

        <StyleInclude Source="/Resources/Styles/WindowStyles.axaml" />


        <!--  CustomControls  -->
        <StyleInclude Source="/Resources/Styles/CustomControls/AdvancedNumericUpDownStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/CustomControls/AdvancedTextBoxStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/CustomControls/DefaultContentControlStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/CustomControls/HyperlinkButtonStyles.axaml" />
        <StyleInclude Source="/Resources/Styles/CustomControls/VectorImageStyles.axaml" />


        <!--  ListBoxes  -->
        <StyleInclude Source="/Resources/Styles/ListBoxes/ActiveGroupsListBoxStyle.axaml" />
        <StyleInclude Source="/Resources/Styles/ListBoxes/ActivesListBoxStyle.axaml" />
        <StyleInclude Source="/Resources/Styles/ListBoxes/ArchiveGroupsListBoxStyle.axaml" />
        <StyleInclude Source="/Resources/Styles/ListBoxes/ArchivesListBoxStyle.axaml" />
        <StyleInclude Source="/Resources/Styles/ListBoxes/GamesListBoxStyle.axaml" />
        <StyleInclude Source="/Resources/Styles/ListBoxes/InventoryItemsListBoxStyle.axaml" />
        <StyleInclude Source="/Resources/Styles/ListBoxes/ListItemsListBoxStyle.axaml" />
        <StyleInclude Source="/Resources/Styles/ListBoxes/NavigationListBoxStyle.axaml" />
        <StyleInclude Source="/Resources/Styles/ListBoxes/SecondaryNavigationListBoxStyle.axaml" />
        <StyleInclude Source="/Resources/Styles/ListBoxes/ThemeVariantListBoxStyle.axaml" />


        <!--  Images  -->
        <StyleInclude Source="/Resources/Images/Vectors/AccountVectorImage.axaml" />
        <StyleInclude Source="/Resources/Images/Vectors/ActivesVectorImage.axaml" />
        <StyleInclude Source="/Resources/Images/Vectors/AddCircleVectorImage.axaml" />
        <StyleInclude Source="/Resources/Images/Vectors/ArchiveVectorImage.axaml" />
