        <StyleInclude Source="/Resources/Images/Vectors/StarVectorImage.axaml" />
        <StyleInclude Source="/Resources/Images/Vectors/SteamVectorImage.axaml" />
        <StyleInclude Source="/Resources/Images/Vectors/TelegramVectorImage.axaml" />

    </Application.Styles>

    <Application.Resources>

        <ResourceDictionary>

            <!--  Converters  -->
            <converters:BrushConverter x:Key="BrushConverter" />
            <converters:DoubleGreaterConverter x:Key="DoubleGreaterConverter" />
            <converters:DoubleLessConverter x:Key="DoubleLessConverter" />
            <converters:DoubleMultiplicationConverter x:Key="DoubleMultiplicationConverter" />
            <converters:MarkedPercentConverter x:Key="MarkedPercentConverter" />
            <converters:PercentConverter x:Key="PercentConverter" />

            <!--  Themes  -->
            <ResourceDictionary.ThemeDictionaries>
                <ResourceInclude Source="avares://SteamStorage/Resources/Themes/ClassicTheme.axaml" x:Key="{x:Static themeVariants:ThemeVariants.Classic}" />
                <ResourceInclude Source="avares://SteamStorage/Resources/Themes/LimeTheme.axaml" x:Key="{x:Static themeVariants:ThemeVariants.Lime}" />
                <ResourceInclude Source="avares://SteamStorage/Resources/Themes/VeryDarkTheme.axaml" x:Key="{x:Static themeVariants:ThemeVariants.VeryDark}" />
                <ResourceInclude Source="avares://SteamStorage/Resources/Themes/VeryLightTheme.axaml" x:Key="{x:Static themeVariants:ThemeVariants.VeryLight}" />
            </ResourceDictionary.ThemeDictionaries>

        </ResourceDictionary>

    </Application.Resources>

</Application>