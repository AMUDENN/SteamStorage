        <StyleInclude Source="/Resources/Images/Vectors/FilterDownVectorImage.axaml" />
        <StyleInclude Source="/Resources/Images/Vectors/FilterUpVectorImage.axaml" />
        <StyleInclude Source="/Resources/Images/Vectors/GithubVectorImage.axaml" />
        <StyleInclude Source="/Resources/Images/Vectors/GoodConnectionVectorImage.axaml" />
        <StyleInclude Source="/Resources/Images/Vectors/HomeVectorImage.axaml" />
        <StyleInclude Source="/Resources/Images/Vectors/InformationVectorImage.axaml" />
        <StyleInclude Source="/Resources/Images/Vectors/InventoryVectorImage.axaml" />
